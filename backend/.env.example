# FossaWork V2 Environment Configuration Example
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="FossaWork V2"
APP_VERSION="2.0.0"
APP_ENV="development"  # development, staging, production
DEBUG=true

# API Settings
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4

# Database Configuration
DATABASE_URL="sqlite:///./fossawork.db"  # SQLite for development
# DATABASE_URL="postgresql://user:password@localhost/fossawork"  # PostgreSQL for production

# Security Settings
# CRITICAL: Generate secure keys before running in production!
# To generate a secure SECRET_KEY:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=""  # REQUIRED - JWT signing key

# CRITICAL: This key is REQUIRED for credential encryption
# Without it, the application will not start
# To generate a secure FOSSAWORK_MASTER_KEY:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
FOSSAWORK_MASTER_KEY=""  # REQUIRED - Credential encryption key (no fallback)

JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
SMTP_FROM="FossaWork Notifications <noreply@fossawork.com>"
SMTP_TLS=true
SMTP_SSL=false

# Pushover Configuration (for real-time notifications)
PUSHOVER_APP_TOKEN="your-pushover-app-token"
PUSHOVER_API_URL="https://api.pushover.net/1/messages.json"

# Browser Automation Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_SCREENSHOT_DIR="data/screenshots"

# WorkFossa Integration
WORKFOSSA_BASE_URL="https://app.workfossa.com"
WORKFOSSA_LOGIN_URL="https://app.workfossa.com/login"

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR="logs"
LOG_MAX_SIZE_MB=50
LOG_BACKUP_COUNT=10

# Memory Management
MEMORY_MONITOR_ENABLED=true
MEMORY_THRESHOLD_MB=1024
MEMORY_CHECK_INTERVAL_SECONDS=60

# Rate Limiting (future enhancement)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=100

# Feature Flags
ENABLE_BROWSER_AUTOMATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSHOVER_NOTIFICATIONS=true
ENABLE_SCHEDULE_DETECTION=true
ENABLE_FILTER_CALCULATION=true

# Development Settings
DEV_MODE=true
DEV_AUTO_RELOAD=true
DEV_CORS_ORIGINS="http://localhost:3001,http://localhost:5173"

# Production Settings
PRODUCTION_DOMAIN=""
SSL_ENABLED=false
SSL_CERT_PATH=""
SSL_KEY_PATH=""