# Frontend Environment Configuration Example
# Copy this file to .env.local and update with your actual values

# Development Settings
VITE_API_BASE_URL="http://localhost:8000"
VITE_DEBUG_MODE=false  # Enable comprehensive debug logging for filter calculations
VITE_DEV_MODE=true

# Build Settings  
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true

# API Settings
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Feature Flags
VITE_ENABLE_FILTER_DEBUG=false  # Enable filter debug panel
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_CONSOLE_LOGGING=true

# Browser Settings
VITE_BROWSER_CACHE_DURATION=300000  # 5 minutes

# Production Settings (for build time)
VITE_PRODUCTION_API_URL="https://api.fossawork.com"
VITE_PRODUCTION_DOMAIN="app.fossawork.com"

# Analytics (if needed)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=""

# Error Reporting (if needed)
VITE_ERROR_REPORTING_ENABLED=false
VITE_ERROR_REPORTING_DSN=""