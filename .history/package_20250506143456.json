{
  "name": "fossa-login",
  "version": "1.0.0",
  "description": "Automated login script for Fossa",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run fix-vite-cache && vite",
    "build": "npm run fix-vite-cache && tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "node server/server.js",
    "server:restart": "node scripts/restart-server.js",
    "cleanup": "node scripts/cleanup-processes.js",
    "start": "npm run cleanup && concurrently \"npm run dev\" \"npm run server\"",
    "setup": "node scripts/setup.js",
    "bootstrap-templates": "node scripts/bootstrap-templates.js",
    "init-data": "node --input-type=module -e \"import { initializeDataFromTemplates } from './scripts/init-data.js'; initializeDataFromTemplates();\"",
    "electron:dev": "concurrently \"npm run server\" \"npm run dev\" \"electron .\"",
    "electron:dev:start": "node scripts/fix-vite-cache.mjs && node scripts/run-electron-dev.js",
    "electron:dev:fast": "node scripts/run-electron-dev.js",
    "electron:hidden": "concurrently \"npm run server:restart\" \"electron .\"",
    "start:hidden": "wscript scripts/hide-cmd.vbs",
    "electron:build": "electron-builder",
    "electron:start": "electron .",
    "backup": "node scripts/backup.js",
    "full-backup": "node scripts/full-backup.js",
    "full-backup:encrypt": "node scripts/full-backup.js --encrypt",
    "restore": "node scripts/restore.js",
    "restore-full": "node scripts/restore-full-backup.js",
    "scheduled-backup": "node scripts/scheduled-backup.js",
    "cleanup-ports": "node scripts/cleanup-ports.js",
    "free-port": "node scripts/free-port.js",
    "enhance-logs": "node scripts/enhance-existing-logs.js",
    "create-test-history": "node scripts/create-test-history.js",
    "convert-archives": "node scripts/convert-user-archives.js",
    "convert-all-archives": "node scripts/convert-all-users-archives.js",
    "fix-vite-cache": "node scripts/fix-vite-cache.mjs",
    "fix-vite-issues": "node scripts/fix-vite-issues.mjs",
    "fix-tailwind": "node scripts/fix-tailwind.mjs",
    "test": "node -e \"console.log('Running all tests...'); require('child_process').execSync('npm run test:notifications && npm run test:automation', {stdio: 'inherit'});\"",
    "test:notifications": "node -e \"console.log('Running notification tests...'); require('child_process').execSync('node tests/notifications/test-pushover-root.js && node tests/notifications/test-email-format.js', {stdio: 'inherit'});\"",
    "test:automation": "node -e \"console.log('Running automation tests...'); require('child_process').execSync('node tests/automation/test-change-trigger.js && node tests/automation/test-simulate-changes.js', {stdio: 'inherit'});\""
  },
  "dependencies": {
    "@playwright/test": "^1.51.1",
    "@types/nodemailer": "^6.4.17",
    "@types/react-datepicker": "^7.0.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/url-join": "^5.0.0",
    "adm-zip": "^0.5.16",
    "ansi-colors": "^4.1.3",
    "archiver": "^6.0.2",
    "axios": "^1.8.4",
    "body-parser": "^2.2.0",
    "cli-progress": "^3.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "fs-extra": "^11.3.0",
    "jsdom": "^26.1.0",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "playwright": "^1.51.1",
    "playwright-core": "^1.51.1",
    "puppeteer": "^24.6.1",
    "pushover-notifications": "^1.2.3",
    "react-csv": "^2.2.2",
    "react-datepicker": "^8.3.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.5.0",
    "react-spring": "^9.7.5",
    "react-tooltip": "^4.2.21",
    "twilio": "^5.5.2",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.1",
    "@types/react-csv": "^1.1.10",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "electron": "^35.1.5",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.5",
    "vite": "^5.1.0"
  },
  "build": {
    "appId": "com.fossa.monitor",
    "productName": "Fossa Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "scripts/**/*",
      "data/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
